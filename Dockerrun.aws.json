{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "akash14/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "akash14/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "akash14/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "akash14/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                  "hostPort": 80,
                  "containerPort": 80,
                  "protocol": "tcp"
                }
            ],
            "links": ["client", "server"]
        }
    ]
}